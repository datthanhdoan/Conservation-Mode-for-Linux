	echo "Wanna turn it on ? (press 1) âš¡"
	read sw
	if [ $sw -eq 1 ]
	then
		echo 1 > /sys/bus/platform/drivers/ideapad_acpi/VPC2004:00/conservation_mode
		echo ""
		echo "Conservation mode enabled ðŸŒ±"
		echo ""
	else 
		echo "Your battery is still charging âš¡"
	fi
fi

